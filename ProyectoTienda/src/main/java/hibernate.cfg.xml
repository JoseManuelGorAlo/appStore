<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3307/empresabbdd</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.search.autoregister_listeners">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping resource="entidades/Clienteproductos.hbm.xml" />
        <mapping resource="entidades/Clientes.hbm.xml" />
        <mapping resource="entidades/Tarjetasbancarias.hbm.xml" />
        <mapping resource="entidades/Direcciones.hbm.xml" />
        <mapping resource="entidades/Carritos.hbm.xml" />
        <mapping resource="entidades/Productos.hbm.xml" />
        <mapping resource="entidades/Clientesdirecciones.hbm.xml" />
        <mapping resource="entidades/Comprasrealizadas.hbm.xml" />
    </session-factory>
</hibernate-configuration>
